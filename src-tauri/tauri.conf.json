{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fluster",
  "version": "0.1.0",
  "identifier": "com.fluster.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fluster",
        "width": 800,
        "height": 450,

        "devtools": false,
        "maximized": false,
        "resizable": false,
        "maximizable": false,
        "decorations": false
      }
    ],
    
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
